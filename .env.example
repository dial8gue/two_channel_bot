# Telegram
BOT_TOKEN=your_bot_token_here
ADMIN_ID=123456789
DEBUG_MODE=false

# Timezone (optional)
# Use IANA timezone identifiers for timestamp display
# Examples: Europe/Moscow, America/New_York, Asia/Tokyo, Europe/London
# If not set or invalid, defaults to UTC
# TIMEZONE=Europe/Moscow

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
MAX_TOKENS=4000
HOROSCOPE_MAX_TOKENS=2000

# Database
DB_PATH=/app/data/bot.db
STORAGE_PERIOD_HOURS=168

# Analysis
ANALYSIS_PERIOD_HOURS=24

# User Analysis Command
# Период анализа для команды /anal (часы), по умолчанию 8
ANAL_PERIOD_HOURS=8

# Cache
CACHE_TTL_MINUTES=60

# Debounce
DEBOUNCE_INTERVAL_SECONDS=21600

# Horoscope Debounce
# Интервал дебаунса для гороскопов (секунды), по умолчанию 3600 (1 час)
HOROSCOPE_DEBOUNCE_SECONDS=3600

# Inline Mode (ответы на вопросы в чатах)
# Интервал дебаунса для обычных пользователей (секунды), по умолчанию 3600 (1 час)
INLINE_DEBOUNCE_SECONDS=3600
# Максимальное количество токенов для инлайн-ответов
INLINE_MAX_TOKENS=500

# Collection
COLLECTION_ENABLED=true

# Buffering (optional)
BUFFER_SIZE=50
BUFFER_FLUSH_INTERVAL_SECONDS=30
# Message Formatting
DEFAULT_PARSE_MODE=Markdown
ENABLE_MARKDOWN_ESCAPING=true
MAX_MESSAGE_LENGTH=4096
