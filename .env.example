# Telegram
BOT_TOKEN=your_bot_token_here
ADMIN_ID=123456789
DEBUG_MODE=false

# Timezone (optional)
# Use IANA timezone identifiers for timestamp display
# Examples: Europe/Moscow, America/New_York, Asia/Tokyo, Europe/London
# If not set or invalid, defaults to UTC
# TIMEZONE=Europe/Moscow

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
MAX_TOKENS=4000

# Database
DB_PATH=/app/data/bot.db
STORAGE_PERIOD_HOURS=168

# Analysis
ANALYSIS_PERIOD_HOURS=24

# User Analysis Commands
# Time period for /anal command (hours) - default: 6
ANAL_PERIOD_HOURS=6
# Time period for /deep_anal command (hours) - default: 12
DEEP_ANAL_PERIOD_HOURS=12
# Note: DEBOUNCE_INTERVAL_SECONDS applies to user commands (admin bypasses debounce)

# Cache
CACHE_TTL_MINUTES=60

# Debounce
DEBOUNCE_INTERVAL_SECONDS=21600

# Collection
COLLECTION_ENABLED=true

# Buffering (optional)
BUFFER_SIZE=50
BUFFER_FLUSH_INTERVAL_SECONDS=30
# Message Formatting
DEFAULT_PARSE_MODE=Markdown
ENABLE_MARKDOWN_ESCAPING=true
MAX_MESSAGE_LENGTH=4096
